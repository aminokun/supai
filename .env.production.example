# Auth Service Database
AUTH_DB_USER=auth_user
AUTH_DB_PASSWORD=<GENERATE_STRONG_PASSWORD>
AUTH_DB_NAME=auth_db

# User Service Database
USER_DB_USER=user_user
USER_DB_PASSWORD=<GENERATE_STRONG_PASSWORD>
USER_DB_NAME=user_db

# Asset Price Service Database
ASSET_PRICE_DB_USER=asset_price_user
ASSET_PRICE_DB_PASSWORD=<GENERATE_STRONG_PASSWORD>
ASSET_PRICE_DB_NAME=asset_price_db

# Wallet Tracking Service Database
WALLET_TRACKING_DB_USER=wallet_tracking_user
WALLET_TRACKING_DB_PASSWORD=<GENERATE_STRONG_PASSWORD>
WALLET_TRACKING_DB_NAME=wallet_tracking_db

# Portfolio Service Database
PORTFOLIO_DB_USER=portfolio_user
PORTFOLIO_DB_PASSWORD=<GENERATE_STRONG_PASSWORD>
PORTFOLIO_DB_NAME=portfolio_db

# Notification Service Database
NOTIFICATION_DB_USER=notification_user
NOTIFICATION_DB_PASSWORD=<GENERATE_STRONG_PASSWORD>
NOTIFICATION_DB_NAME=notification_db

# Message Queue & Cache

RABBITMQ_USER=rabbitmq_admin
RABBITMQ_PASSWORD=<GENERATE_STRONG_PASSWORD>

REDIS_PASSWORD=<GENERATE_STRONG_PASSWORD>

# Application Secrets

# Auth Service
# Generate with: openssl rand -hex 32
BETTER_AUTH_SECRET=<GENERATE_WITH_OPENSSL>
BETTER_AUTH_URL=https://api.yourdomain.com/api/auth
TRUSTED_ORIGINS=https://yourdomain.com,https://telegram.yourdomain.com

# Blockchain APIs
ALCHEMY_API_KEY=<YOUR_ALCHEMY_API_KEY>
ALCHEMY_WEBHOOK_SECRET=<YOUR_ALCHEMY_WEBHOOK_SECRET>

# Telegram Bot
TELEGRAM_BOT_TOKEN=<YOUR_TELEGRAM_BOT_TOKEN_FROM_BOTFATHER>

# Environment

NODE_ENV=production

# Domain Configuration

# Frontend URLs
NEXT_PUBLIC_API_URL=https://api.yourdomain.com
NEXT_PUBLIC_BETTER_AUTH_URL=https://api.yourdomain.com/api/auth

# Internal Service URLs (for API Gateway)
FRONTEND_URL=https://yourdomain.com
TELEGRAM_BOT_URL=https://telegram.yourdomain.com

# Microservice URLs (internal Docker network)
AUTH_SERVICE_URL=http://auth:3001
USER_SERVICE_URL=http://user:3007
ASSET_PRICE_SERVICE_URL=http://asset-price:3002
WALLET_TRACKING_SERVICE_URL=http://wallet-tracking:3003
PORTFOLIO_SERVICE_URL=http://portfolio:3004
NOTIFICATION_SERVICE_URL=http://notification:3005

# Docker Image Configuration (for production compose)

GITHUB_USERNAME=yourgithubusername
IMAGE_TAG=latest
